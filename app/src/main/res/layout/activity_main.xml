<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/EaseColorBackground"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16"
                    android:text="普通对话框"
                    android:textColor="@color/EaseColorTitleText"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#DDDDDD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_tips_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:onClick="onTipDialog"
                    android:paddingHorizontal="16dp"
                    android:text="提示性质对话框"
                    android:textColor="@color/EaseColorMainText"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginStart="@dimen/dp_16"
                    android:background="#DDDDDD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_warn_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:onClick="onTipWarnDialog"
                    android:paddingHorizontal="16dp"
                    android:text="警告性质对话框"
                    android:textColor="@color/EaseColorMainText"
                    android:textSize="14sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/EaseColorBackground"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16"
                    android:text="选择菜单"
                    android:textColor="@color/EaseColorTitleText"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#DDDDDD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:id="@+id/btn_single_dialog"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:onClick="onTipSingleDialog"
                    android:paddingHorizontal="16dp"
                    android:text="底部单选菜单"
                    android:textColor="@color/EaseColorMainText"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginStart="@dimen/dp_16"
                    android:background="#DDDDDD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:id="@+id/btn_multiple_dialog"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:onClick="onMultipleDialog"
                    android:paddingHorizontal="16dp"
                    android:text="底部多选菜单"
                    android:textColor="@color/EaseColorMainText"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginStart="@dimen/dp_16"
                    android:background="#DDDDDD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_single_menu"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="PopMenu"
                    android:textColor="@color/EaseColorMainText"
                    android:textSize="14sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/EaseColorBackground"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16"
                    android:text="Picker"
                    android:textColor="@color/EaseColorTitleText"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#DDDDDD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:id="@+id/btn_date_time_picker"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:onClick="onDatePicker"
                    android:paddingHorizontal="16dp"
                    android:text="日期时间选择器"
                    android:textColor="@color/EaseColorMainText"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginStart="@dimen/dp_16"
                    android:background="#DDDDDD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/btn_address_picker"
                    android:gravity="center_vertical"
                    android:onClick="onAddressPicker"
                    android:paddingHorizontal="16dp"
                    android:text="地址选择器"
                    android:textColor="@color/EaseColorMainText"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginStart="@dimen/dp_16"
                    android:background="#DDDDDD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/btn_color_picker"
                    android:gravity="center_vertical"
                    android:onClick="onColorPicker"
                    android:paddingHorizontal="16dp"
                    android:text="颜色选择器"
                    android:textColor="@color/EaseColorMainText"
                    android:textSize="14sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/EaseColorBackground"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16"
                    android:text="其他"
                    android:textColor="@color/EaseColorTitleText"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#DDDDDD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:id="@+id/btn_loading"
                    android:onClick="onMenuDialog"
                    android:paddingHorizontal="16dp"
                    android:text="加载框"
                    android:textColor="@color/EaseColorMainText"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginStart="@dimen/dp_16"
                    android:background="#DDDDDD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/btn_toast"
                    android:gravity="center_vertical"
                    android:onClick="onToast"
                    android:paddingHorizontal="16dp"
                    android:text="Toast"
                    android:textColor="@color/EaseColorMainText"
                    android:textSize="14sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>