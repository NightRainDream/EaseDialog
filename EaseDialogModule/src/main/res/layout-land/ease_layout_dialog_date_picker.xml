<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_picker_title"
        style="@style/StyleTitle"
        android:layout_width="@dimen/dp_472"
        android:gravity="center_horizontal"
        tools:text="Title" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_picker"
        android:layout_width="@dimen/dp_472"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:paddingHorizontal="@dimen/dp_16"
        android:background="@color/EaseColorBackground"
        android:orientation="horizontal">

        <com.github.gzuliyujiang.wheelview.widget.WheelView
            android:id="@+id/id_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            app:wheel_curvedEnabled="true"
            app:wheel_curvedMaxAngle="45"
            app:wheel_cyclicEnabled="true"
            app:wheel_itemTextBoldSelected="true"
            app:wheel_itemTextColor="@color/EaseColorMainText"
            app:wheel_itemTextColorSelected="@color/EaseColorButtonTextColor"
            app:wheel_itemTextSize="@dimen/sp_14"
            app:wheel_itemTextSizeSelected="@dimen/sp_15"
            app:wheel_visibleItemCount="5" />

        <com.github.gzuliyujiang.wheelview.widget.WheelView
            android:id="@+id/id_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:wheel_curvedEnabled="true"
            app:wheel_curvedMaxAngle="45"
            app:wheel_cyclicEnabled="true"
            app:wheel_itemTextBoldSelected="true"
            app:wheel_itemTextColor="@color/EaseColorMainText"
            app:wheel_itemTextColorSelected="@color/EaseColorButtonTextColor"
            app:wheel_itemTextSize="@dimen/sp_14"
            app:wheel_itemTextSizeSelected="@dimen/sp_15"
            app:wheel_visibleItemCount="5" />

        <com.github.gzuliyujiang.wheelview.widget.WheelView
            android:id="@+id/id_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:wheel_curvedEnabled="true"
            app:wheel_curvedMaxAngle="45"
            app:wheel_cyclicEnabled="true"
            app:wheel_itemTextBoldSelected="true"
            app:wheel_itemTextColor="@color/EaseColorMainText"
            app:wheel_itemTextColorSelected="@color/EaseColorButtonTextColor"
            app:wheel_itemTextSize="@dimen/sp_14"
            app:wheel_itemTextSizeSelected="@dimen/sp_15"
            app:wheel_visibleItemCount="5" />

        <com.github.gzuliyujiang.wheelview.widget.WheelView
            android:id="@+id/id_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:wheel_curvedEnabled="true"
            app:wheel_curvedMaxAngle="45"
            app:wheel_cyclicEnabled="true"
            app:wheel_itemTextBoldSelected="true"
            app:wheel_itemTextColor="@color/EaseColorMainText"
            app:wheel_itemTextColorSelected="@color/EaseColorButtonTextColor"
            app:wheel_itemTextSize="@dimen/sp_14"
            app:wheel_itemTextSizeSelected="@dimen/sp_15"
            app:wheel_visibleItemCount="5" />

        <com.github.gzuliyujiang.wheelview.widget.WheelView
            android:id="@+id/id_minute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:wheel_curvedEnabled="true"
            app:wheel_curvedMaxAngle="45"
            app:wheel_cyclicEnabled="true"
            app:wheel_itemTextBoldSelected="true"
            app:wheel_itemTextColor="@color/EaseColorMainText"
            app:wheel_itemTextColorSelected="@color/EaseColorButtonTextColor"
            app:wheel_itemTextSize="@dimen/sp_14"
            app:wheel_itemTextSizeSelected="@dimen/sp_15"
            app:wheel_visibleItemCount="5" />


        <com.github.gzuliyujiang.wheelview.widget.WheelView
            android:id="@+id/id_second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:wheel_curvedEnabled="true"
            app:wheel_curvedMaxAngle="45"
            app:wheel_cyclicEnabled="true"
            app:wheel_itemTextBoldSelected="true"
            app:wheel_itemTextColor="@color/EaseColorMainText"
            app:wheel_itemTextColorSelected="@color/EaseColorButtonTextColor"
            app:wheel_itemTextSize="@dimen/sp_14"
            app:wheel_itemTextSizeSelected="@dimen/sp_15"
            app:wheel_visibleItemCount="5" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="@dimen/dp_472"
        style="@style/StyleAction">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_picker_cancel"
            style="@style/StyleButton"
            tools:text="CANCEL" />

        <View style="@style/StyleButtonDivider" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_picker_positive"
            style="@style/StyleButton"
            tools:text="DEFINE" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>